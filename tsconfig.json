{
	"compilerOptions": {
		"incremental": true,
		"target": "ES2020",
		"moduleResolution": "node",
		"module": "commonjs",
		"esModuleInterop": true,
		"resolveJsonModule": true,

		"strict": true,

		"forceConsistentCasingInFileNames": true,
		"outDir": "./dist",
		"rootDir": "./src"
	},
	"exclude": ["node_modules", "dist"]
}
